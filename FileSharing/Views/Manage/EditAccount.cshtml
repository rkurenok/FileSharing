@model FileSharing.Models.User

@{
    ViewBag.Title = "EditAccount";
}
<br />
<h2>Редактирование аккаунта</h2>
<br />
<br />

<div style="margin:0 auto;">
    <div id="editAccount" class="text-center" style=" margin: auto;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="col-md-12"><br /></div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)


                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Email } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Login } })
                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Age } })
                            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            <div class="btn-group pull-left" data-toggle="buttons">
                                @if (ViewBag.Gender == "Мужской")
                                {
                                    <label class="btn btn-primary active">
                                        <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Мужской" checked> Мужской
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Женский"> Женский
                                    </label>
                                }
                                else if (ViewBag.Gender == "Женский")
                                {
                                    <label class="btn btn-primary ">
                                        <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Мужской"> Мужской
                                    </label>
                                    <label class="btn btn-primary active">
                                        <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Женский" checked> Женский
                                    </label>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12"><br /></div>

                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Сохранить" class="btn btn-success btn-block" style="margin-left: 50px; width: 238px" />
                    </div>
                    <div class="col-md-6">
                        @Html.ActionLink("Назад", "Index", "Home", htmlAttributes: new { @class = "btn btn-warning", @style = "min-width: 119px" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
