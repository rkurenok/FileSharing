<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#c1c1c13b;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FileSharing", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: #e0e0e0;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Файлы", "Index", "File", new { category = 0 }, new { @style = "color: #e0e0e0;" })</li>
                    <li>@Html.ActionLink("О нас", "About", "Home", new { @style = "color: #e0e0e0;" })</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home", new { @style = "color: #e0e0e0;" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        using (Html.BeginForm("Index", "File", FormMethod.Post, new { id = "serachFile", @class = "navbar-right" }))
                        {
                            <li class="containerTest">
                                @Html.TextBox("serachFile", null, new { @placeholder = "Найти...", @id = "inputTextSearch" })
                                <div class="search"></div>
                            </li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src='@Url.Content("~/Scripts/jquery.unobstrusive-ajax.js")'></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
