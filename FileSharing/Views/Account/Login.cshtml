@model FileSharing.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Страница входа</h2>
<br />

<div style="margin:0 auto;">
    <div id="logIn" class="text-center" style=" margin: auto;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3 class="col-md-12">@Html.ActionLink("FileSharing", "Index", "Home", htmlAttributes: new { @style = "margin: 100px 10px, 10px, 10px" })</h3>

            <div class="col-md-12"><br /></div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Логин" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-1" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Пароль" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                </div>
            </div>
            <div class="col-md-10">
                <label>
                    <input type="checkbox" /> Запомнить меня
                </label>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-12"><br /></div>

            <div class="row">
                <div class="col-md-6 col-lg-offset-1">
                    <input type="submit" value="Войти" class="btn btn-success btn-block" style="margin-left: 35px" />
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Назад", "Index", "Home", htmlAttributes: new { @class = "btn btn-warning" })
                </div>
            </div>
            @*<div class="btn-group btn-group-justified">
            <input type="submit" value="Войти" class="btn btn-success" />
            @Html.ActionLink("Назад", "Index", "Home", htmlAttributes: new { @class = "btn btn-warning" })
        </div>*@
        </div>
        }

        @*<div>
            @Html.ActionLink("Back to List", "Index", "Home")
        </div>*@
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
