@model FileSharing.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}
<br />
<h2 id="headerId">Регистрация</h2>
<br />
<br />

<div style="margin:0 auto;">
    <div id="register" class="text-center" style=" margin: auto;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h3 class="col-md-12">@Html.ActionLink("FileSharing", "Index", "Home", null, htmlAttributes: new { })</h3>
            <div class="col-md-12"><br /></div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Логин" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Пароль" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordConfirm, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @placeholder = "Пароль" } })
                        @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "Возраст" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-7">
                        @*@Html.EditorFor(model => model.Male, new { htmlAttributes = new { @class = "form-control" } })*@
                        @*Мужской
                    @Html.RadioButtonFor(model => model.Gender, "Мужской", new { htmlAttributes = new { @class = "form-control" } }) &nbsp; &nbsp;
                    Женский
                    @Html.RadioButtonFor(model => model.Gender, "Женский", new { htmlAttributes = new { @class = "form-control" } })*@
                        <div class="btn-group pull-left" data-toggle="buttons">
                            <label class="btn btn-primary">
                                <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Мужской"> Мужской
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" name="Gender" id="Gender" autocomplete="off" value="Женский"> Женский
                            </label>
                            <br>
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger", @style = "color: #ff4f4c" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12"><br /></div>

            <div class="row">
                <div class="col-md-6">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-success" style="margin-left: 50px; width: 238px" />
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Назад", "Index", "Home", htmlAttributes: new { @class = "btn btn-warning", @style = "min-width: 119px" })
                </div>
            </div>
        </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
